  <h1>Upload a New Movie Poster</h1>
  <p>Kevin only â€“ don't share this link.</p>

  <input type="file" id="posterInput" accept="image/*"><br>
  <button onclick="previewPoster()">Preview</button>

  <div class="preview" id="preview"></div>

  <script>
    function previewPoster() {
      const file = document.getElementById('posterInput').files[0];
      if (!file) return alert("Choose an image first!");

      const reader = new FileReader();
      reader.onload = function(e) {
        document.getElementById('preview').innerHTML = 
          '<img src="' + e.target.result + '" alt="Preview">';
      };
      reader.readAsDataURL(file);
    }
  </script>

